<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url();">
  <div class="banner-content">
    <h1>Wagon Cocktails</h1>
    <p>Find the best cocktails</p>
      <div class="container">
        <div class="row">
          <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card">
              <div class="card-description">
                <p><strong>Cocktail: </strong><%= cocktail.name.capitalize %></p>
              </div>
            <%= link_to "See details", cocktail_path(cocktail), class: "card-link" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <a><%= link_to "add cocktail", new_cocktail_path, class: "btn btn-primary"  %></a>
  </div>
</div>
