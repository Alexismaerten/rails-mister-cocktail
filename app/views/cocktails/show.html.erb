<h1>cocktail show</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="card ">
          <h4><%= @cocktail.name %></h4>
          <% @cocktail.doses.each do |dose| %>
          <p><%= dose.description %></p>
          <P><%= dose.ingredient.name %></P>
          <% end %>
        </div>
    </div>
  </div>
</div>
<h3><%= link_to " add dose" , new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
<%= link_to " back to index" , cocktails_path, class: "btn btn-primary"  %></h3>
